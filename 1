<body>
<div class="container">
  <h2>ID URL Generator</h2>
  <label for="orderId">Enter ID:</label>
  <input type="text" id="orderId" placeholder="Enter ID">
  <button onclick="generateUrl()">Generate URL</button>
  <p id="generatedUrl"></p>
</div>

<script>
        function generateUrl() {
            // Get input value
            var orderId = document.getElementById("orderId").value;

            // Check if the input is in the correct format
            var idPattern = /^(\d+)-(\d+)$/;
            if (!idPattern.test(orderId)) {
                alert("Invalid ID format. Please enter in the format: 12345-00001");
                return;
            }

            // Split the order ID into parts
            var idParts = orderId.split('-');

            // Generate the URL
            var url = "www.myidblabla.com/order-love/" + idParts[0] + "/" + idParts[1];

            // Display the generated URL as a clickable link
            var generatedUrlElement = document.getElementById("generatedUrl");
            generatedUrlElement.innerHTML = "Generated URL: <a href='http://" + url + "' target='_blank'>" + url + "</a>";
        }
    </script>
</body>
